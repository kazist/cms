{{ set_assets('applications/Cms/Addons/Menublog/assets/css/menublog.css') }}

{% set blogs = callFunction( "Cms.Addons.Menublog.Models.MenublogModel", 'getBlogs' ) %}



<div class="menu-blogs">
    {% if blogs|length > 0 %}
        {% for blog in blogs %}

            {% set blog_url =  generate_url('cms.blogs.detail', null, 0, blog) %}

            <div class="col-sm-3">
                <div class="menu-blog">

                    <a href="{{ blog_url }}" title="blog.title">
                        <b>{{ blog.title|truncate(30) }}</b>
                    </a>

                    <div class="img-wrapper">
                        <a href="{{ blog_url }}" title="{{ blog.title }}">
                            <img src="{{ resized_image(blog.image_file, 150,150) }}" alt="{{ blog.title }}" title="{{ blog.title }}" align="left" width="150px"/>
                        </a>
                    </div>

                    <div class="marketplace-blog-addition">
                        <i class="fa fa-clock-o"></i> Posted:  {{ blog.date_created|date('d M Y H:i') }} <br>
                    </div>

                    <a class="btn btn-primary btn-xs btn-flat col-sm-12" href="{{ blog_url }}" title="{{ blog.title }} Read More">
                        Read More
                    </a>

                    <div class="clearfix"></div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>