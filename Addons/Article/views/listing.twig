
{{ set_assets('applications/Cms/Addons/Article/assets/css/style.css') }}

<div class="block-articles">
    {% if articles|length > 0 %}
        {% for article in articles %}
            <div class="article">

                <a href="{{ generate_url('cms.articles.detail', null, 0, article) }}">
                    <img src="{{ resized_image(article.article_image, 90, 90) }}" alt="{{ article.title }}" title="{{ article.title }}" align="left" width="90px"/>
                </a>
                <h4>
                    <a href="{{ generate_url('cms.articles.detail', null, 0, article) }}" title="{{ article.title }}" >
                        {{ article.title|capitalize|raw  }}
                    </a>
                </h4>
                {#  {{ articles|striptags|truncate(70)|raw }} #}
                <a class="fa fa-arrow-right" href="{{ generate_url('cms.articles.detail', null, 0, article) }}" title="{{ article.title }}: Read more">
                    Read More 
                </a>
                <br>

                <small>
                    <i class="fa fa-clock-o"> Posted On:</i>{{ article.date_created|date('Y-m-d') }} 
                </small>

                <div class="clearfix"></div>

                {%if additional_info %}
                    <div class="article-update-info">
                        <div class="text-capitalize">
                            <a>
                                <i class="fa fa-user"></i> 
                                <a href="{{ generate_url('users.users.detail', {'id': article.created_by}) }}" title="{{ article.author_name }}" >
                                    {{ article.author_name }}
                                </a>
                            </a>
                        </div>
                        <div class="text-capitalize">
                            <i class="fa fa-clock-o"></i> {{ article.date_created|date('d M Y H:i') }}
                        </div>
                        <div class="text-capitalize pull-right">
                            <a href="{{ generate_url('cms.articles.detail', null, 0, article) }}#comments" title="{{ article.title }} Comments">
                                <i class="fa fa-comments"></i> Comments (0)
                            </a>
                        </div>
                    </div>  
                    <div class="clearfix"></div>  
                {% endif %}
            </div>
        {% endfor %}
    {% else %}
        No Latest Articles
    {% endif %}
</div>